@model OneMits.Models.Category.AddCategoryModel

<div id="tab1" class="w-container  city">
    <div class="set-container">
        <div class="container-contact100">
            <span class="contact100-form-title">
                Post A Forum
            </span>
            <form class="contact100-form validate-form"
                  asp-action="AddCategory" method="post" id="createForumForm" enctype="multipart/form-data">

                <div class="wrap-input100 validate-input" data-validate="Name is required">
                    <label asp-for="CategoryTitle" class="label-input100">Topic</label>
                    <input class="input100" type="text" asp-for="CategoryTitle"  placeholder="Enter your Forum Topic " required>
                    <span class="focus-input100" asp-validation-for="CategoryTitle"></span>
                </div>


                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <label asp-for="CategoryDescription" class="label-input100">Desciption</label>
                    <textarea asp-for="CategoryDescription" class="input100"  placeholder="About Forum..." required></textarea>
                    <span class="focus-input100" asp-validation-for="CategoryDescription"></span>
                </div>

                <div class="container-contact100-form-btn">
                    <button type="submit" id="newFormBtn" class="contact100-form-btn">
                        <span>
                            Submit
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </form>
        </div>
        <div id="dropDownSelect1"></div>
    </div>
</div>
