@model OneMits.Models.Category.CategoryIndexModel

<div class="row">
    <div class="col-md-8">
        <span class="contact100-froum-title">
            Forums
        </span>
    </div>
    <div class="col-md-4 ">
        @if (User.IsInRole("Admin"))
        {
            <div class="container-contact100-forum-btn" >
                <a asp-controller="Category" asp-action="Create">
                    <button class="contact100-form-btn">
                        <span>
                            Add Forum
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                </a>

            </div>
        }
        </div>
</div>
@foreach (var category in Model.CategoryList)
{
    <div class="w3-come  city">
        <div class="set-container-fr" style="padding: 0px">
            <div class="row">
                <div class="col-md-10">
                    <div class="container-forum">
                        <form class="contact100-form validate-form">
                            <a style="text-decoration: none;" asp-controller="Category" asp-action="Topic" asp-route-id="@category.CategoryId">
                                <span  class="contact100-forum-title">
                                    @category.CategoryTitle
                                </span>
                                <span class="label-input100">Number Of Post : @category.QuestionCount</span>
                            
                                <p class="input-fr">@category.CategoryDescription</p>
                            </a>   
                        </form>
                    </div>
                    <div id="dropDownSelect1"></div>
                </div>
                <div class="col-md-2">
                    <div class="lad">
                        <button class="button-add">
                            <a asp-controller="Question" asp-action="Create" asp-route-id="@category.CategoryId">
                                <span style="color: white;">Ask Question</span>
                            </a>
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>
}


